<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f0f0"
  android:padding="8dp"
    android:weightSum="16"
    android:id="@+id/lay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1ca8f4"
        android:layout_weight="3"
        android:layout_marginBottom="4dp"
        android:id="@+id/header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/weather_loading"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/weatherText" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_more_horiz_black_24dp"
            android:onClick="callWeather"/>

    </LinearLayout>



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="11"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/text"
        android:textColor="#000"
        android:text="Instructions"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:id="@+id/servicesLayout"
        android:orientation="horizontal"
      >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="48dp"
            android:layout_weight="1.5"
            android:id="@+id/bankBtn"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:padding="4dp"
            android:background="@drawable/hollow_blue_button"
            android:src="@drawable/ic_checklist_and_pencil"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            android:onClick="onClick"
            android:padding="4dp"
            android:id="@+id/hospitalBtn"
            android:background="@drawable/hollow_blue_button"
            android:src="@drawable/ic_camping_backpackage"
            android:layout_height="80dp" />

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/ic_tent"
            android:layout_height="80dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/eatries"
            android:scaleType="fitXY"
            android:onClick="onClick"
            android:padding="4dp"
            android:background="@drawable/hollow_blue_button"
            android:layout_weight="2"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            android:text="@string/start_trek"
            android:onClick="callDangerMedical"
            android:layout_marginTop="8dp"
            android:id="@+id/danger"
            android:textColor="#ffffff"
            android:background="#1ca8f4"
            android:layout_height="wrap_content" />





    </LinearLayout>

</LinearLayout>

    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/navigation_list"
        android:layout_gravity = "start"
        android:choiceMode="singleChoice"
        android:background="#111"
        />

</android.support.v4.widget.DrawerLayout>